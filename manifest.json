{
    "update_url": "https://clients2.google.com/service/update2/crx",
    "manifest_version": 2,
    "name": "Facebookless - Help you become more productive",
    "version": "0.1",
    "description": "Makes Facebook less addicting, Help you become more productive",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "options_page": "options.html",
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "permissions": [
        "https://facebook.com/",
        "tabs",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": ["https://www.facebook.com/*"],
            "js": [
                "libs/jquery.min.js",
                "libs/moment.js",
                "options.js",
                "messages.js",
                "moneyBox.js",
                "hideFeed.js"
            ],
            "css": [
                "facebook.css"
            ]
        }
    ]
}